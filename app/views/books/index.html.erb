<% if flash[:notice] %>
  <div class="flash"><p><%= flash[:notice] %></p></div>
<% end %>

<h1><strong>Books</strong></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book) %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(book) %>
      </td>
      <td>
        <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <div class="error_explanation">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <div class="field">
    <% if @book.errors.any? %>
      <div class="field_with_errors">
        <label for="book-title">Title</label>
      </div>
    <% else %>
      <label for="book-title">Title</label>
    <% end %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <% if @book.errors.any? %>
      <div class="field_with_errors">
        <label for="book-body">Title</label>
      </div>
    <% else %>
      <label for="book-body">Title</label>
    <% end %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>